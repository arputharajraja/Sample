<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edittext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <Button
        android:id="@+id/pairing"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onShowPairedPrinters"
        android:text="Show Paired Printers" />

    <Button
        android:id="@+id/smartcard"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onReadSmartCard"
        android:text="Read Smart card" />

    <Button
        android:id="@+id/msr"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onReadMSR"
        android:text="Read MSR" />

    <Button
        android:id="@+id/bill"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onPrintBill"
        android:text="Print A Bill" />

    <Button
        android:id="@+id/print"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onPrint"
        android:text="Print" />

    <Button
        android:id="@+id/printBarcode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onPrintBarcode"
        android:text="Print Barcode" />
    
    <Button
        android:id="@+id/printQRcode"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onPrintQRCode"
        android:text="Print QRCode" />

    <Button
        android:id="@+id/printImage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onPrintImage"
        android:text="Print Image" />

    <Button
        android:id="@+id/decodeCreditData"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onDecodeCreditData"
        android:text="Decode Credit Data" />

    <Button
        android:id="@+id/disconnectbutton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onDisconnectDevice"
        android:text="Disconnect" />

    <EditText
        android:id="@+id/RFid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="RF ID: "
        android:textSize="20dp" />

</LinearLayout>